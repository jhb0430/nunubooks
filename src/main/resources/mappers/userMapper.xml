<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.jhb0430.nunubooks.user.repository.UserRepository">
 
	 <insert id="addUser" parameterType="map">
	 		INSERT INTO 
	 				`user`
				(
					`loginId`
					,`name`
					,`email`
					, `password`
					,`postcode`
					, `address`
					, `phoneNumber`
					, `point`
				)
				VALUE
				(
					#{loginId}
					,#{name}
					,#{email}
					,#{password}
					,#{postcode}
					,#{address}
					,#{phoneNumber}
					,#{point}
				)
	 				
	 	</insert>
	 	
	 	
	 	<select id="selectCountId" parameterType="string" resultType="int">
	 	SELECT 
				count(*)
			FROM 
				`user`
			WHERE 
				`loginId` = #{loginId};
 	</select>
 	
 	
 	<select id="selectLoginUser" resultType="com.jhb0430.nunubooks.user.domain.User">
	 	SELECT 
		 		`id`
				,`loginId`
				,`name`
				, `email`
				, `password`
				, `postcode`
				, `address`
				, `phoneNumber`
				, `point`
				, `createdAt`
				, `updatedAt`
		FROM 
				`user`
		WHERE 
				`loginId` = #{loginId}
				AND 
				`password` = #{password};
 	</select>
 	
 	
 	<select id="findUserId" resultType="com.jhb0430.nunubooks.user.domain.User">
	 	SELECT 
			`loginId`
		FROM 
			`user`
		WHERE 
			`name` = #{name}
		AND 
			`email` = #{email}
		OR 
			`phoneNumber` = #{phoneNumber};
	</select>
 	
 	
 	
	 <update id="updatePassword" parameterType="map">
			UPDATE `user`
			SET
				`password` = #{password}
			WHERE
				`loginId` = #{loginId}
				OR 
				`email` = #{email}; 	
	 </update>
 	
	 <update id="updateTmpPassWord" parameterType="map">
			UPDATE `user`
			SET
				`password` = #{password}
			WHERE
				`email` = #{email}; 	
	 </update>
 	
 	
 	
 	
 	<select id="selectUserById" parameterType="int" 
 	resultType="com.jhb0430.nunubooks.user.domain.User">
	
	 	SELECT 
			`id`
			,`loginId`
			,`name`
			, `email`
			, `password`
			, `postcode`
			, `address`
			, `phoneNumber`
			, `point`
			, `createdAt`
			, `updatedAt`
		FROM 
			`user`
		WHERE 
			`id` = #{id} 
 	</select>
 
 
	 <update id="updateUser" parameterType="map">
			UPDATE `user`
			SET
				`point` = #{point}
			WHERE
				`id` = #{id} 	
	 </update>
 </mapper>